@{
    ViewData["Title"] = "Home Page";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <p>
            @TempData["Message"]
        </p>
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}



<div class="row">

    <div class="col-md-3 col-sm-6">
        This is column 1. The first of 3 columns.
    </div>

    <div class="col-md-3 col-sm-6">
        This would be column 2. The second of said columns.
    </div>

    <div class="col-md-3 col-sm-6">
        Which leads us to column 3. The third and final child of the column family. (The most spoiled column)
    </div>


</div>
<br />

<div class="dropdown">
    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Links to Bootstrap Information
    </a>

    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        <a class="dropdown-item" href="https://getbootstrap.com/docs/4.3/getting-started/introduction/">Documentation</a>
        <a class="dropdown-item" href="https://blog.getbootstrap.com/">Bootstrap's Blog</a>
        <a class="dropdown-item" href="https://themes.getbootstrap.com/">Bootstrap Themes</a>
    </div>
</div>
<br />

<div class="card" style="width: 18rem;">
    <img src="https://via.placeholder.com/150" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">Cool Card container we might use in class</h5>
        <p class="card-text">This is merely a cool content container featured in Bootstrap.</p>
        <a href="https://getbootstrap.com/docs/4.3/components/card/" class="btn btn-primary">Link to Cards</a>
    </div>
</div>
